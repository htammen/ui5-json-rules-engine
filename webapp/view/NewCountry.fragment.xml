<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="New Country"
		class="sapUiContentPadding"
		placement="VerticalPreferredTop"
		initialFocus="inputCountry">
			<content>
				<Input value="{dataModel>/newCountry}" id="inputCountry" />
			</content>
			<footer>
				<HBox justifyContent="Center" class="sapUiSmallPadding" >
					<Button text="OK" press="onNewCountryOk"/>
					<Button text="Cancel" press="onNewCountryCancel"/>
				</HBox>
			</footer>
	</Popover>
</core:FragmentDefinition>